/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running non-amplicon illumina tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a  pipeline test.

    Use as follows:
        nextflow run phac-nml/measeq -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/
process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Non-amplicon Illumina test profile'
    config_profile_description = 'Non-amplicon Illumina test dataset to check pipeline function'

    // Input Data and Params
    input                      = "${projectDir}/assets/ci-samplesheet.csv"
    platform                   = "illumina"
    reference                  = "${projectDir}/test_data/MH356245.1.reference.fasta"
    outdir                     = "results"
}
